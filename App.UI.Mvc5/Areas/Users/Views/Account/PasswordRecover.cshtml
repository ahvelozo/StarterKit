@using App.UI.Mvc5.Areas.Users
@using App.UI.Mvc5.Areas.Users.Models

@model AccountPasswordRecoverViewModel

<!-- Meta -->

@{
	Model.PageTitle = GetLocalizedString<AreaResources>("RecoverPassword");
}

<!-- Sections -->

@section page_scripts_init {
	<script src="~/areas/users/scripts/account.password-recover.js"></script>
}

<!-- Page Contents -->

<form id="mainForm" method="post">

	@Html.AntiForgeryToken()
	@Html.ValidationSummary(VisualizationMode.Alert)

	<p class="lead text-center mt-3 mb-5">@(GetLocalizedString<AreaResources>("RecoverPasswordInfo"))</p>

	<div class="form-group">
		@Html.TextBoxFor(model => model.Email, new { @class = "form-control", @autofocus = "autofocus", @placeholder = Html.DisplayNameFor(model => model.Email) })
	</div>

	<button type="submit" class="btn btn-primary btn-block btn-lg mt-3">@(GetLocalizedString<AreaResources>("Recover"))</button>

</form>

<div class="container text-center">
	<p class="mt-5">@(GetLocalizedString<AreaResources>("LogInCallout2")) <a href="@Url.Action("LogIn", "Account", new { area = AppAreas.GetAreaName(Area.Users) })">@(GetLocalizedString<AreaResources>("LogInCalloutAction"))</a></p>
</div>
