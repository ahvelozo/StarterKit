@using App.UI.Mvc5.Areas.Users
@using App.UI.Mvc5.Areas.Users.Models

@model AccountLogInViewModel

<!-- Meta -->

@{
	Model.PageTitle = GetLocalizedString<AreaResources>("LogIn");
}

<!-- Sections -->

@section page_scripts_init {
	<script src="~/areas/users/scripts/account.login.js"></script>
}

<!-- Page Contents -->

<form id="mainForm" method="post">

	@Html.AntiForgeryToken()
	@Html.ValidationSummary(VisualizationMode.Alert)

	<div class="form-group">
		@Html.LabelFor(model => model.EmailOrUsername)
		@Html.TextBoxFor(model => model.EmailOrUsername, new { @class = "form-control", @tabindex = 1, @autofocus = "autofocus" })
	</div>

	<div class="form-group">
		@Html.LabelFor(model => model.Password, new { @class = "pull-left" })
		<a href="@Url.Action("PasswordRecover", "Account", new { area = AppAreas.GetAreaName(Area.Users) })" class="pull-right">@(GetLocalizedString<AreaResources>("RecoverPasswordCallout"))</a>
		@Html.PasswordFor(model => model.Password, new { @class = "form-control", @tabindex = 2 })
	</div>

	<div class="form-check">
		<label class="form-check-label">
			@Html.CheckBoxFor(model => model.RememberMe, new { @class = "form-check-input", @tabindex = 3 })
			@Html.DisplayNameFor(model => model.RememberMe)
		</label>
	</div>

	<button type="submit" class="btn btn-primary btn-block btn-lg mt-3" tabindex="4">@(GetLocalizedString<AreaResources>("LogIn"))</button>

</form>

<div class="container text-center">

	<p class="mt-5">@(GetLocalizedString<AreaResources>("SignUpCallout")) <a href="@Url.Action("SignUp", "Account", new { area = AppAreas.GetAreaName(Area.Users) })">@(GetLocalizedString<AreaResources>("SignUpCalloutAction"))</a></p>

</div>
