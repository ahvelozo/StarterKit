@model BaseViewModel

<!-- Meta -->

@{
	this.SetLayout(Layouts.Base);
}

<!-- Sections -->

@section page_styles {
	@RenderSection("page_styles", required: false)
}

@section page_scripts {
	@RenderSection("page_scripts", required: false)
}

@section page_scripts_init {
	@RenderSection("page_scripts_init", required: false)
}

<!-- Page Contents -->

<div class="container">

	<div class="container text-center">
		<a href="@Url.Action("Index", "Home", new { area = AppAreas.GetAreaName(Area.Root) })">
			<img class="img-fluid" width="50" src="~/Assets/images/logo.svg" />
		</a>
	</div>

	<h1 class="mt-4 mb-4 text-center">@Model.PageTitle</h1>

	@RenderBody()

</div>

